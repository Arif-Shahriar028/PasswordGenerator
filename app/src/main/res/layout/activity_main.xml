<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="19"
        >

        <Button
            android:layout_weight="1"
            android:id="@+id/recommendationId"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="    Click here to see instruction / recommendation"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/idea"
            android:background="#fff"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <CheckBox
                        android:id="@+id/upperCaseId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Upper case"
                        android:textSize="15sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <CheckBox
                        android:id="@+id/lowerCaseId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Lower case"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <CheckBox
                        android:id="@+id/symbleId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Symboles"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <CheckBox
                        android:id="@+id/numberId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Numbers"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Length : "
                    android:textSize="15sp"
                    android:textColor="#0D0D0D"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/passwordLengthId"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:inputType="number"
                    android:gravity="center"
                    android:text="4"
                    />

                <Button
                    android:id="@+id/decreasingId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/increasingId"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

 <LinearLayout
     android:layout_weight="9"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:gravity="center"
     android:layout_marginTop="20dp"
     >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:weightSum="10"
         android:layout_marginTop="10dp"
         >

         <EditText
             android:layout_weight="8"
             android:id="@+id/customPasswordId"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:hint="Your memorizable password"
             android:backgroundTint="#0D0C0C"
             android:textSize="18sp"
             android:inputType="textWebPassword"
             android:gravity="center"
             android:layout_marginTop="10dp"
             />

         <ImageView
             android:id="@+id/showId"
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/eye"
             android:layout_gravity="center"
             android:clickable="true"
             android:focusable="true"
             />
         <ImageView
             android:id="@+id/hideId"
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/hide"
             android:layout_gravity="center"
             android:layout_margin="10dp"
             android:clickable="true"
             android:focusable="true"
             />

     </LinearLayout>

     <Button
         android:id="@+id/generatePassword"
         android:layout_width="200dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="Encrypt password"
         android:textAllCaps="false"
         android:textSize="18sp"
         android:background="#6E83F9"
         android:textColor="#fff"
         />

     <Button
         android:id="@+id/randomPassword"
         android:layout_width="200dp"
         android:layout_height="40dp"
         android:layout_gravity="center"
         android:text="Random password"
         android:textAllCaps="false"
         android:background="#94CAF5"
         android:layout_marginTop="5dp"
         />


     <TextView
         android:id="@+id/finalPassword"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="20dp"
         android:background="@drawable/border"
         android:textSize="22sp"
         android:padding="10dp"
         android:textIsSelectable="true"
         android:textColorHighlight="#F71403"
         android:gravity="center"
         android:textColor="#F21C1A1A"
         />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_gravity="center"
         android:gravity="center"
         >

         <ImageView
             android:id="@+id/showId2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/eye"
             android:clickable="true"
             android:focusable="true"
             android:layout_margin="5dp"
             android:layout_marginRight="5dp"
             />

         <ImageView
             android:id="@+id/hideId2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/hide"
             android:clickable="true"
             android:focusable="true"
             android:layout_margin="5dp"
             android:layout_marginLeft="5dp"
             />

     </LinearLayout>

 </LinearLayout>



    </LinearLayout>

</ScrollView>